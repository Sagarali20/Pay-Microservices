{
  //
  "Routes": [
    // Authentication Web API
    {
      "ServiceName": "auth-service",
      "UpstreamPathTemplate": "/api/Authentication/Login",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamScheme": "http",
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Authentication/Login"
    },
    {
      "ServiceName": "auth-service",
      "UpstreamPathTemplate": "/api/Authentication/Refresh",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamScheme": "http",
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Authentication/Refresh"
    },
    // Sendmoney Web API
    {
      "DownstreamPathTemplate": "/{url}",
      "DownstreamScheme": "http",
      "UseServiceDiscovery": true,
      "ServiceName": "sendmoney-service",
      "UpstreamPathTemplate": "/sendmoney/{url}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      //"AuthorizationPolicy": "RequireAdministratorRole",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      //"RouteClaimsRequirement": {
      //  "Role": "Administrator"
      //},
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "60s",
        "PeriodTimespan": 60,
        "Limit": 100
      }
      // "UpstreamPathTemplate": "/sendmoney/{catchAll}",
      //"DownstreamHostAndPorts": [
      //  {
      //    "Host": "localhost",
      //    "Port": 5183
      //  }
      //],s
      //"DownstreamPathTemplate": "/{catchAll}",

      //"DownstreamPathTemplate": "/{url}"
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000",
    "RateLimitOptions": {
      "QuotaExceededMessage": "Request not allowed",
      "HttpStatusCode": 909
    },
    "ServiceDiscoveryProvider": {
      "Scheme": "http",
      "Host": "localhost",
      "Port": "8500",
      "Type": "Consul"
    }
  }
}
